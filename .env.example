# EzTalk Proxy 环境变量配置
# 复制此文件为 .env 并填入实际值

# ===== 必需配置 =====
# Google AI Studio API 密钥 (必需)
GOOGLE_API_KEY=your_google_api_key_here

# ===== 服务配置 =====
# 服务端口 (默认: 7860)
PORT=7860

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== API 配置 =====
# API 超时时间 (秒)
API_TIMEOUT=600

# 读取超时时间 (秒)
READ_TIMEOUT=60.0

# 最大连接数
MAX_CONNECTIONS=200

# ===== 搜索功能配置 (可选) =====
# Google 自定义搜索引擎 ID (用于网络搜索功能)
GOOGLE_CSE_ID=your_google_cse_id_here

# 搜索结果数量
SEARCH_RESULT_COUNT=5

# 搜索片段最大长度
SEARCH_SNIPPET_MAX_LENGTH=200

# ===== 文档上传配置 =====
# 文档上传最大大小 (MB)
MAX_DOCUMENT_UPLOAD_SIZE_MB=20

# ===== Google Cloud Storage 配置 (可选) =====
# 是否启用 GCS 上传
GEMINI_ENABLE_GCS_UPLOAD=false

# GCS 存储桶名称
GCS_BUCKET_NAME=your_gcs_bucket_name

# GCS 项目 ID
GCS_PROJECT_ID=your_gcs_project_id

# ===== 其他配置 =====
# OpenAI API 基础 URL (如果使用 OpenAI 兼容接口)
DEFAULT_OPENAI_API_BASE_URL=https://api.openai.com

# Google API 基础 URL
GOOGLE_API_BASE_URL=https://generativelanguage.googleapis.com