# EzTalk Proxy 环境变量配置
# 复制此文件为 .env 并填入实际值

# ===== 必需配置 =====
# Google AI Studio API 密钥 (必需)
GOOGLE_API_KEY=your_google_api_key_here

# ===== 服务配置 =====
# 服务端口 (默认: 7860)
PORT=7860

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== API 配置 =====
# API 超时时间 (秒)
API_TIMEOUT=600

# 读取超时时间 (秒)
READ_TIMEOUT=60.0

# 最大连接数
MAX_CONNECTIONS=200

# ===== 搜索功能配置 (可选) =====
# Google 自定义搜索引擎 ID (用于网络搜索功能)
GOOGLE_CSE_ID=your_google_cse_id_here

# 搜索结果数量
SEARCH_RESULT_COUNT=5

# 搜索片段最大长度
SEARCH_SNIPPET_MAX_LENGTH=200

# ===== 文档上传配置 =====
# 文档上传最大大小 (MB)
MAX_DOCUMENT_UPLOAD_SIZE_MB=20

# ===== Google Cloud Storage 配置 (可选) =====
# 是否启用 GCS 上传
GEMINI_ENABLE_GCS_UPLOAD=false

# GCS 存储桶名称
GCS_BUCKET_NAME=your_gcs_bucket_name

# GCS 项目 ID
GCS_PROJECT_ID=your_gcs_project_id

# ===== 其他配置 =====
# OpenAI API 基础 URL (如果使用 OpenAI 兼容接口)
DEFAULT_OPENAI_API_BASE_URL=https://api.openai.com

# Google API 基础 URL
GOOGLE_API_BASE_URL=https://generativelanguage.googleapis.com

# ===== SiliconFlow 图像生成（前端"默认"平台）=====
# 不要将真实密钥提交到仓库，请在本地 .env 中填写
# API地址与模型可保持默认，或按需覆盖
SILICONFLOW_IMAGE_API_URL=https://api.siliconflow.cn/v1/images/generations
SILICONFLOW_DEFAULT_IMAGE_MODEL=Kwai-Kolors/Kolors
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# ===== Modal Z-Image-Turbo 默认配置 (可选) =====
# Modal 自部署模型的 API 地址，多个地址用逗号分隔（支持主备轮询）
VITE_API_URLS=https://your-api-url

# ===== 文本聊天默认配置（前端"默认"平台）=====
# 不要将真实密钥提交到仓库，请在本地 .env 中填写
DEFAULT_TEXT_API_URL=https://your-api-url.com/v1/chat/completions
DEFAULT_TEXT_API_KEY=your_default_text_api_key_here
DEFAULT_TEXT_MODELS=gemini-2.5-pro-1M,gemini-2.5-flash,gemini-flash-lite-latest

# ===== 安全配置 =====
# 请求签名验证（防止API滥用和中间人攻击）
# 是否启用签名验证 (true/false)
# 生产环境建议设置为 true
SIGNATURE_VERIFICATION_ENABLED=true

# 签名密钥（多个密钥用逗号分隔，支持密钥轮换）
# ⚠️ 重要: 此密钥必须与Android客户端 RequestSignatureUtil.kt 中的 SECRET_KEY 保持一致
# 生产环境示例密钥 (2024-11-09生成): TRrYbMyQFs6B0T9L7wL0_2jvZQXZ8KFatqS5TN9haf4
# 请在本地 .env 文件中使用真实密钥，不要提交到版本控制
SIGNATURE_SECRET_KEYS=your-secret-key-change-in-production-2024

# ===== 后台管理配置 =====
# 管理后台访问密码
ADMIN_PASSWORD=your_secure_admin_password_here
# 管理后台 Session 密钥 (随机字符串)
ADMIN_SESSION_SECRET=your_random_session_secret_key_here
